<Game>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: root.size
            pos: root.pos
    BoxLayout:
        pos: (0, root.height -100)
        orientation: "horizontal"
        Button:
            size_hint: 0.5, None
            background_color: 1,0.5,0.5,1
            text: "CREATE GAME"
            on_press:
                root.create_cards()
        Button:
            size_hint: 0.5, None
            background_color: 1,0.5,0.5,1
            text: "SETTINGS"
            on_press:
                root.manager.current = "Settings"
                root.manager.transition.direction = "up"

    RelativeLayout:
#        size: min(root.size), min(root.size)
        size_hint: None, None
        size: (400, 400)
        pos_hint: {'center_x': .5, 'center_y': .4}


        GridLayout:
