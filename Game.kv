<SettingsScreen>:
    size_hint: 1, 1
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: root.size
            pos: root.pos
    BoxLayout:

        pos: (0, 0)
        orientation: "vertical"
        Button:
            size_hint: 1, 0.1
            background_color: 1,0.5,0.5,1
            text: "BACK"
            on_press:
                root.manager.transition.direction = "down"
                root.manager.current = "Game"
        Button:
            size_hint: 1, 0.1
            background_color: 1,0.5,0.5,1
            text: "SET COLOR"
            on_release:
                root.set_color(colorpicker)
        ColorPicker:
            id: colorpicker
            size_hint: 1, 0.9

